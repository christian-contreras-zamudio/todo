        <a class="btn btn-primary h3" href="{{ "{{ path('"~ route_name_prefix ~"_new') }}" }}" style="margin-bottom:10px">
            <span class="fa fa-plus" aria-hidden="true"></span>&nbsp;{{ "{{ 'crudMensaje.nuevo'|trans }}" }}
        </a>
    {% endif %}
</div>

