{% extends 'PetkoparaCrudGeneratorBundle::base.html.twig' %}

{% block title %}
{{ parent() }} -  {{ 'crudMensaje.editar'|trans }} tarea
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>{{ 'crudMensaje.editar'|trans }}&nbsp;tarea&nbsp;<span class="fa fa-pencil" aria-hidden="true"></span></h2>
    </div>
</div>



<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <br>
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }} alert-dismissible animated bounce">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
        <br>
</div>
    {#% form_theme edit_form 'forms-layout/bootstrap_3_horizontal_layout.twig.html' %#}
    {{ form_start(edit_form) }}

    {{ form_widget(edit_form) }}
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <button type="submit" class="btn btn-success">
            <span class="fa fa-refresh" aria-hidden="true"></span>&nbsp;{{ 'crudMensaje.actualizar'|trans }}
        </button>
    </div>
    {{ form_end(edit_form) }}

    <hr/>

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <br>
    <div class="form-group">
        <a class="btn btn-warning" href="{{ path('tarea') }}">
            <span class="fa fa-list" aria-hidden="true"></span>&nbsp;
            {{ 'crudMensaje.Volver listado'|trans }}
        </a>
                            <a class="btn btn-info" href="{{ path('tarea_new') }}">
                <span class="fa fa-plus" aria-hidden="true"></span>&nbsp;
                {{ 'crudMensaje.nuevo'|trans }}
            </a>
                            <form action="{{ path('tarea_delete', { 'id': tarea.id }) }}" method="post" style="display: inline-block">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'crudMensaje.eliminar'|trans }}');">
                    <span class="fa fa-remove" aria-hidden="true"></span>
                    &nbsp;
                    {{ 'crudMensaje.eliminar'|trans }}
                </button>
            </form>
            </div>
</div></div>


{% endblock %}
{% block javascripts %}
<script>
// NOTA: revisar el id conicida
$('#tarea').addClass('row');
$('form[name="tarea"]').addClass('col-xs-12 col-sm-12 col-md-12 col-lg-12');
</script>
{% endblock %}